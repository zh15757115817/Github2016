body
	background #EFEFF4

.head
	width 100%
	height 40px
	background #fff
	line-height 40px
	text-align center

.boxs
	display flex
	background #fff
	padding 10px
	margin-bottom 5px
	margin-top 10px
	.img_box
		flex 1
		width 108px
		height 90px
		background url(../../img/content_img@2x.png) no-repeat top left
		background-size 90%
	.info_box
		flex 2
		.info-title
			margin-bottom 5px
			font-size 12px
			display flex
			.title-tit
				flex 1
				float left
			.title-img
				flex 1
				text-align right
				font-size 12px
				background url(../../img/content_icon@2x.png) no-repeat 35px 1px
				background-size 10px 10px
				color #d0d0d0
		.info-address
			font-size 14px
			margin-bottom 5px
			text-indent 1em
		.info-time
			font-size 12px
			color #FF9D42
			border-radius 5px
			margin-bottom 5px
		
		.price-dp
			width 55px
			height 20px
			color #fff
			background #EA5404
			float right 
			line-height 20px
			text-align center
			font-size 12px
			border-radius 4px
		

