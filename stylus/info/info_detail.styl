body
	background #EFEFF4

.head
	width 100%
	height 50px
	background #fff url(../../img/nav_back_icon@2x.png) no-repeat 15px 
	background-size 2.5%
	line-height 50px
	text-align center
	border-bottom 1px solid #dcdcdc
	
		
	
.mandatory
	width 100%
	background #fff
	margin-bottom 10px
	padding-bottom 10px
	.man_img
		width 64px
		height 64px
		margin 0 auto
		background url(../../img/login_user-head@2x.png) no-repeat bottom
		background-size 100%
		padding-top 20px
	.man_name
		height 25px
		margin 0px auto
		text-align center
		font-size 20px
		line-height 25px
	.man_contant
		text-align center
		height 25px
		margin 0 auto
		font-size 12px
		color grey
		line-height 25px
	.man_contract
		width 100px
		height 45px
		margin 0 auto
		.contract_more
			width 100px
			height 30px
			margin 5px auto
			background #fff
			border-radius 3px
			line-height 30px
			text-align center
			border 1px solid #F27431
			color #fff
			font-size 12px
			color #F27431


.optional
	width 100%
	margin 0 auto
	
	background #fff
	.opt_title
		border-bottom 1px solid #dcdcdc
		height 35px
		margin-left 10px
		.one
			line-height 35px
			font-size 16px
		.two
			line-height 35px
			font-size 16px
			margin-left 20px 
	.opt_more
		width 100%
		display flex
		.more-left
			flex 1
			margin-bottom 10px
		.left
			height 60px
			margin 10px
			border-radius 3px
			background grey
		.txt
			display block
			text-align center
			font-size 12px
			color grey
		


