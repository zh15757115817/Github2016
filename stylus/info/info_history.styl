body
	background #EFEFF4

.head
	width 100%
	height 50px
	background #fff url(../../img/nav_back_icon@2x.png) no-repeat 15px 
	background-size 2.5%
	line-height 50px
	text-align center
	margin-bottom 10px

.boxs
	display flex
	width 100%
	background #fff
	padding 10px
	margin-bottom 5px
	.img_box
		flex 2
		width 128px
		height 90px
		background url(../../img/content_img_list@2x.png) no-repeat center
		background-size 100%
	.info_box
		flex 3
		padding 5px 25px
		.info-title
			margin-bottom 5px
			.title-right
				display inline-block
				font-size 12px
				float right
				line-height 18px
				color grey
		.info-address
			font-size 12px
			color grey
			margin-bottom 5px
		.info-tag_box
			width 25%
			font-size 12px
			padding 2px 4px
			border 1px solid #EA5404
			color #EA5404
			border-radius 5px
			margin-bottom 5px
		.info-price
			.price-nb
				color #EA5404
				font-size 16px
			.price-un
				font-size 12px
				color grey
				margin-left 5px
			.price-dp
				float right 
				margin-top 5px
				font-size 12px
				color grey