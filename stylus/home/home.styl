body
	background #EFEFF4

.header
	width 100%
	height 40px
	
	float left
.icon-back
	width 50px
	line-height 40px
	float left
	margin-left 10px
	background url(../../img/nav_icon_down@2x.png) no-repeat 32px
	background-size 18%
	font-size 14px
	color #fff
.header_title
	margin-left 25% 
	line-height 40px
	color #fff

.search_box
	width 94%
	height 35px
	background #fff
	margin-left 3%
	line-height 35px
	text-align center
	border-radius 3px
	font-size 12px
	float left
	.search_input
		width 94%
		height 35px
		margin-left 25%
		.icon-search
			display block
			float left
			width 35px
			height 35px
			background url(../../img/nav_icon_search@2x.png) no-repeat 15px 10px
			background-size 40%
		.search_title
			display block
			float left
			color #c0c0c0
.slider_box
	width 100%
	height 300px
	.slider_container
		width 100%
		height 300px

		.slider_block
			width 100%
			height 300px
			background url(../../img/banner_img@2x.png) no-repeat
			background-size cover 	
	.point_box
		width 60px
		height 15px
		position relative
		margin 0 auto
		margin-top -20px
		.point_block
			width 10px
			height 10px
			float left
			margin-right 5px
			background url(../../img/banner_icon_point_nor@2x.png) no-repeat
			background-size cover

.query_box
	width 100%
	display flex
	background #fff
	border-bottom 1px solid #d0d0d0
	padding 10px 0px
	.query_block
		display block
		width 80px
		height 25px
		text-align center
		line-height 15px
		border-right 1px solid #d0d0d0
		margin-
		.block_title
			width 80px
			height 35px
			font-size 12px
		.icon
			display block
			width 100%
			height 8px
			text-align center
			margin-top 0px
			background url(../../img/content_icon02_nor@2x.png) no-repeat center
			background-size 7px 4px
	.query_price
		flex 1
		.price-icon
			width 100%
			height 20px
			display block 
			background url(../../img/content_icon01_nor@2x.png) no-repeat center
			background-size 40%
